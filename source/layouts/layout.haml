!!!
%html
  %head
    %meta{charset: "utf-8"}/
    / Always force latest IE rendering engine or request Chrome Frame
    %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}/
    / Use title if it's in the page YAML frontmatter
    %title= current_page.data.title || "Dronov dot net"
    = stylesheet_link_tag "normalize", "foundation"
    = javascript_include_tag  "modernizr"
  .row
    .large-12.columns
      .nav-bar.right
        %ul.button-group
          %a.button{:href => "/about.html"} About me
          %a.button{:href => "/contacts.html"} Contacts
      %h2= link_to "Dronov.net", "/"
      %hr/
  %body{:class => page_classes}
  .row
    - if current_page.path == "index.html"
      .large-9.columns{:role => "content"}
        = yield
      %aside.large-3.columns
        .panel
          %h5 Tags
          %ul.side-nav
            - blog.tags.each do |tag, articles|
              %li
                %a{href: "/tags/#{tag}.html"}= "#{tag} (#{articles.count})"
    - else 
      = yield

      #disqus_thread
      :javascript
        var disqus_config = function () {
        this.page.url = current_page.path;  // Replace PAGE_URL with your page's canonical URL variable
        this.page.identifier = current_page.identifier; // Replace PAGE_IDENTIFIER with your page's unique identifier variable
        };
          (function() { // DON'T EDIT BELOW THIS LINE
            var d = document, s = d.createElement('script');
            s.src = 'https://dronov-net.disqus.com/embed.js';
            s.setAttribute('data-timestamp', +new Date());
            (d.head || d.body).appendChild(s);
          })();
      %noscript
        Please enable JavaScript to view the
        %a{:href => "https://disqus.com/?ref_noscript"} comments powered by Disqus.
%footer.row
  .large-12.columns
    %hr/
    .row
      .large-6.columns
        %p
          %small Dronov.net 2010-2017. Built with Middleman && Vim. Powered by FreeBSD
